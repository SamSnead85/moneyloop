{
    "cli": {
        "version": ">= 7.0.0"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal"
        },
        "preview": {
            "distribution": "internal",
            "ios": {
                "simulator": true
            }
        },
        "production": {
            "autoIncrement": true
        }
    },
    "submit": {
        "production": {
            "ios": {
                "appleId": "${APPLE_ID}",
                "ascAppId": "${ASC_APP_ID}",
                "appleTeamId": "${APPLE_TEAM_ID}"
            },
            "android": {
                "serviceAccountKeyPath": "./google-service-account.json",
                "track": "production"
            }
        }
    }
}